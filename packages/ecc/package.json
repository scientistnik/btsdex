    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "bigi": "^1.4.2",
    "bs58": "^4.0.1",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "crypto-js": "^3.1.9-1",
    "deep-equal": "^1.0.1",
